{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:allNonMajor",
    "schedule:daily",
    ":maintainLockFilesWeekly"
  ],
  "packageRules": [
    {
      "matchFileNames": ["**/package.json"],
      "matchDepTypes": [
        "dependencies",
        "devDependencies",
        "optionalDependencies"
      ],
      "rangeStrategy": "bump"
    },
    {
      "matchFileNames": ["**/deno.json"],
      "rangeStrategy": "bump"
    }
  ],
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/vendor/**",
    "**/__tests__/**",
    "**/test/**",
    "**/tests/**",
    "**/__fixtures__/**"
  ]
}
